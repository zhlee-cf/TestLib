<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"/>

    <style name="MainTheme" parent="android:Theme.Light">
        <!--将Activity的Theme设置成透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="android:Theme.Light">
        <!--将Activity的Theme设置个背景-->
        <item name="android:windowBackground">@mipmap/login_app</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- 底部导航栏 相对布局样式  底部导航  一个线性 + 3个相对 每个相对 里面包一个imageview -->
    <style name="ButtomBar">
        <item name="android:background">#F8F8F8</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">3dp</item>
    </style>

    <!-- 底部导航栏 图片布局样式 -->
    <style name="ButtomBarImgBtn">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!-- 通讯录listview条目的样式-->
    <style name="MMListItem">
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">4.0dip</item>
        <item name="android:paddingTop">4.0dip</item>
        <item name="android:paddingRight">4.0dip</item>
        <item name="android:paddingBottom">4.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

