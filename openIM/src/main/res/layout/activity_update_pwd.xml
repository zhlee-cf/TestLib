<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_org"
            android:gravity="center"
            android:padding="10dp"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/icon_top_back" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ib_back"
            android:textSize="@dimen/dimen_16dp"
            android:text="我的设置" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="原始密码:"
            android:textSize="14sp" />

        <com.open.im.view.ClearEditText
            android:id="@+id/et_pwd_old"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_et_bg"
            android:gravity="center"
            android:hint="请输入原始密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_lock_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/login_lock" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="新密码:"
            android:textSize="14sp" />

        <com.open.im.view.ClearEditText
            android:id="@+id/et_pwd1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/login_et_bg"
            android:digits="@string/register_name_digits"
            android:gravity="center"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_lock_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/login_lock" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_login_selector"
        android:text="保 存"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>